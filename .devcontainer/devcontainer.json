// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.195.0/containers/cpp
{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick an Debian / Ubuntu OS version: debian-11, debian-10, debian-9, ubuntu-21.04, ubuntu-20.04, ubuntu-18.04
		// Use Debian 11, Debian 9, Ubuntu 18.04 or Ubuntu 21.04 on local arm64/Apple Silicon
		"args": { "VARIANT": "Ubuntu 21.04" }
	},
	"runArgs": [ 
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		"--privileged"
	],
		
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"C_Cpp.intelliSenseEngine": "Disabled",
				"cortex-debug.registerUseNaturalFormat": false,
				"editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
				"clangd.path": "/usr/bin/clangd-12",
				"clangd.arguments": [
					"-log=verbose",
					"-compile-commands-dir=${workspaceRoot}/build",
					"--clang-tidy",
					"-j=7",
					"--pretty", 
					"--query-driver=/usr/local/bin/arm-none-eabi-g++",
					"-header-insertion=iwyu",
					"--pch-storage=memory",
					"--all-scopes-completion",
					"--completion-style=detailed",
					"--background-index",
					"--enable-config"
				],
				"cortex-debug.openocdPath": "/usr/bin/openocd",
				"cmake.configureOnOpen": true
			},
			
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
                "cschlosser.doxdocgen",
                "jeff-hykin.better-cpp-syntax",
                "llvm-vs-code-extensions.vscode-clangd",
                "marus25.cortex-debug",
                "mitaki28.vscode-clang",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cpptools-themes",
                "ms-vscode.powershell",
                "notskm.clang-tidy",
                "tomoki1207.pdf",
                "twxs.cmake"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "gcc -v",

	// Comment out this line to run as root instead.
	"remoteUser": "vscode",
    "postCreateCommand": "git submodule update --recursive --init"
}
